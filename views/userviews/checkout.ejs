    }

    .payment__type:hover {
      -webkit-transform: translateY(-1px);
      transform: translateY(-1px);
    }

    .payment__type .icon {
      font-size: 32px;
      margin-right: 10px;
    }

    .payment__type+.payment__type {
      margin-left: 10px;
    }

    .icon-xl {
      font-size: 48px;
      line-height: 48px;
    }

    .content {
